<% title = 'Projeto' %>

<section class="max-w-6xl mx-auto">
  <h1 class="text-3xl font-bold text-white mb-8">Projeto: <%= projetoNome || 'Sem nome' %></h1>

  <% if (tarefas && tarefas.length > 0) { %>
    <% tarefas.forEach(tarefa => { %>
      <div class="bg-cartao p-4 rounded-lg shadow hover:shadow-xl transition-all duration-300 mb-4">
        <h2 class="text-xl font-semibold text-white"><%= tarefa.nome %></h2>
        <p class="text-prata text-sm mt-1"><%= tarefa.descricao %></p>
      </div>
    <% }) %>
  <% } else { %>
    <p class="text-center text-gray-400">Nenhuma tarefa encontrada neste projeto.</p>
  <% } %>
</section>
